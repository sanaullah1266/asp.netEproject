@model E_project_book_mangement_system.Models.Register

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/headerfooter.cshtml";
}

<h1>login</h1>

<h4>Register</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
